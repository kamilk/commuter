<%= form_for @report, html: {class: 'form-horizontal'} do |f| %>
  <div class="control-group">
    <label class="control-label">From:</label>
    <div class="controls">
      <%= f.text_field :from %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">To:</label>
    <div class="controls">
      <%= f.text_field :to %>
    </div>
  </div>
  <div class="control-group">
    <label class="control-label">Price per 1 kilometer:</label>
    <div class="controls">
      <%= f.text_field :price_per_km %>
    </div>
  </div>
  <div class="control-group">
    <div class="controls">
      <%= f.submit class: 'btn' %>
    </div>
  </div>
<% end %>
